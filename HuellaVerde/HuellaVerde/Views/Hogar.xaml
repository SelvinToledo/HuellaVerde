<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HuellaVerde.Views.Hogar"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="45,100,*,100" BackgroundColor="White">
        <Image Source="flecha.png"
               Grid.Row="0"
               HorizontalOptions="Start"
               Margin="20,20,0,0"/>

        <StackLayout Grid.Row="1" Orientation="Horizontal" HorizontalOptions="CenterAndExpand">

            <Image Source="hogar.png"/>

            <Label Text="Hogar"
                   TextColor="#797A97"
                   FontAttributes="Bold"
                   FontSize="32"
                   VerticalOptions="Center"/>

        </StackLayout>

        <ScrollView Grid.Row="2">

            <Grid ColumnDefinitions="*,*" RowDefinitions="*,*,*,*">
                <Label
                    Grid.Column="0"
                    Grid.Row="0"
                    Text="Aire acondicionado"
                    TextColor="Black"
                    FontSize="22"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                    />
                <Picker Grid.Column="1" Grid.Row="0"
                        Title="-Seleccionar-"
                        TitleColor="Gray"
                        TextColor="Gray"
                        HorizontalOptions="CenterAndExpand">
                    <Picker.Items>
                        <x:String>Tengo 1 </x:String>
                        <x:String>Tengo más de 1</x:String>
                        <x:String>No tengo </x:String>
                    </Picker.Items>

                </Picker>
                
                <Label
                    Grid.Column="0"
                    Grid.Row="1"
                    Text="Ecotecnia"
                    TextColor="Black"
                    FontSize="22"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                    />
                <Picker Grid.Column="1" Grid.Row="1"
                        Title="-Seleccionar-"
                        TitleColor="Gray"
                        TextColor="Gray"
                        HorizontalOptions="CenterAndExpand">
                    <Picker.Items>
                        <x:String>Realizo 1</x:String>
                        <x:String>Realizo más de 1</x:String>
                        <x:String>Desconozco el significado</x:String>
                    </Picker.Items>

                </Picker>

                <Label
                    Grid.Column="0"
                    Grid.Row="2"
                    Text="Paneles solares"
                    TextColor="Black"
                    FontSize="22"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                    />
                <Picker Grid.Column="1" Grid.Row="2"
                        Title="-Seleccionar-"
                        TitleColor="Gray"
                        TextColor="Gray"
                        HorizontalOptions="CenterAndExpand">
                    <Picker.Items>
                        <x:String>Tengo 1</x:String>
                        <x:String>Tengo más de 1</x:String>
                        <x:String>No tengo</x:String>
                    </Picker.Items>

                </Picker>

                <Label
                    Grid.Column="0"
                    Grid.Row="3"
                    Text="Número de habitaciones"
                    TextColor="Black"
                    FontSize="22"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                    />
                <Picker Grid.Column="1" Grid.Row="3"
                        Title="-Seleccionar-"
                        TitleColor="Gray"
                        TextColor="Gray"
                        HorizontalOptions="CenterAndExpand">
                    <Picker.Items>
                        <x:String>Tengo 1</x:String>
                        <x:String>Tengo más de 1</x:String>
                        <x:String>No tengo</x:String>
                    </Picker.Items>

                </Picker>


            </Grid>
            
            
        </ScrollView>

        <Button Grid.Row="3"
                Style="{StaticResource btnContinuar}"
                Command="{Binding btnContinuarcommand}"/>

    </Grid>

</ContentPage>