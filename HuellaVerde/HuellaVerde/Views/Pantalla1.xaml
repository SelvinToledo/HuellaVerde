<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HuellaVerde.Views.Pantalla1"
             NavigationPage.HasNavigationBar="False">
    
    <StackLayout BackgroundColor="White"
                 VerticalOptions="FillAndExpand"
                 >
        <Image Source="huella.png"
               HeightRequest="300"
               Margin="0,50"/>

        <Label Text="¡Bienvenido a Huella 
               Verde!" 
               FontSize="30"
               TextColor="Black"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center"/>
        <Label Text="La aplicación que te ayuda a calcular tu huella de carbono con la realización de una serie de preguntas."
               FontSize="20"
               TextColor="Black"
               HorizontalTextAlignment="Center"
               Margin="30,40,30,0"
               />
               
        <Button Text="SIGUIENTE"
                TextColor="#017351"
                FontAttributes="Bold"
                CharacterSpacing="1.5"
                BackgroundColor="#A8DDB5"
                HorizontalOptions="CenterAndExpand"
                CornerRadius="15"
                WidthRequest="250"
                Margin="0,90"
                Command="{Binding btnSiguientecommand}"
                />


    </StackLayout>
</ContentPage>